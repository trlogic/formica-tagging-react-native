{
  "compilerOptions": {
    "target": "ES2019",
    "module": "esnext",
    "outDir": "dist",
    "rootDir": "src",
    "strict": false,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
    "dist"
  ]
}
